<header>
  <div id="logo"><a href="/">BOOKMARK MANAGER</a></div>
  <div id="user-links">
    <% if current_user %>
      <form id="sign-out" method="post" action="/sessions">
        <input type="hidden" name="_method" value="delete">
        <input class="btn" type="submit" value="Sign out">
      </form>

      <button class="btn">
        <a href="/link/new">Add a link</a>
      </button>

    <% else %>
      <button class="btn">
        <a href="/users/new">Sign up</a>
      </button>
      <button class="btn">
        <a href="/sessions/new">Sign in</a>
      </button>
    <% end %>
  </div>
</header>

